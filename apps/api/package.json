{
  "name": "@repo/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --ignore '../../packages/**' --ignore '**/node_modules/**' src/server.ts",
    "build": "tsc && tsc-alias -p tsconfig.json --resolve-full-paths",
    "start": "node dist/src/server.js",
    "start:dev": "tsx src/server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "vitest run",
    "test:unit": "vitest run src/",
    "test:integration": "vitest run test/integration/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "email:dev": "email dev --dir emails --port 3001",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "db:reset:seed": "prisma migrate reset --force"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/schedule": "^5.0.2",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@prisma/adapter-pg": "^7.2.0",
    "@react-email/components": "^1.0.3",
    "@react-email/preview-server": "^5.1.1",
    "@repo/packages-types": "workspace:*",
    "@scalar/fastify-api-reference": "^1.40.9",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.10",
    "close-with-grace": "^2.4.0",
    "dotenv-flow": "^4.1.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^5.1.0",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-email": "^5.1.1",
    "resend": "^6.6.0",
    "sharp": "^0.34.5",
    "toad-scheduler": "^3.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@prisma/client": "7.1.0",
    "@repo/packages-utils": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.19.3",
    "@types/pg": "^8.16.0",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prisma": "7.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
